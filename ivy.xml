<ivy-module version="2.0">
    <info organisation="net.stenac" module="blitzbench"/>

    <configurations>
      <conf name="core" />
    </configurations>

    <dependencies defaultconfmapping="core -> default">
        <!-- Core libraries -->
        <dependency org="log4j" name="log4j" rev="1.2.15">
          <exclude org="com.sun.jdmk"/>
           <exclude org="com.sun.jmx"/>
           <exclude org="javax.jms"/>
        </dependency>
        <dependency org="commons-lang" name="commons-lang" rev="2.5"/>
        <dependency org="commons-io" name="commons-io" rev="2.4"/>
        <dependency org="commons-collections" name="commons-collections" rev="3.2.1"/>
        <dependency org="com.google.code.gson" name="gson" rev="2.2.2"/>
        <dependency org="org.apache.httpcomponents" name="httpasyncclient" rev="4.0-beta3"/>
        <dependency org="com.amazonaws" name="aws-java-sdk" rev="1.3.22"/>

        <dependency org="javax.servlet" name="servlet-api" rev="3.0-alpha-1" />

        <!-- Tests -->
        <dependency org="junit" name="junit" rev="4.8.1"/>
    </dependencies>
</ivy-module>

